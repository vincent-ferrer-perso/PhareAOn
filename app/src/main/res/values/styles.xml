<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/fjord_one</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="detailStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorFontDetail</item>
    </style>

    <style name="detailStyleLand">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorFontDetail</item>
    </style>

    <style name="menuStyle">
        <item name="android:textColor">@color/colorFontMenu</item>
    </style>

</resources>
